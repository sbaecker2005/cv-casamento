{
  "name": "wedding-rsvp-api",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "node -r ts-node/register/transpile-only src/server.ts",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "rebuild:native": "npm rebuild better-sqlite3 --build-from-source",
    "export:csv": "curl -H \"Authorization: Bearer $ADMIN_TOKEN\" http://localhost:3001/api/rsvp/export.csv -o rsvp-confirmados.csv",
    "export:xlsx": "curl -H \"Authorization: Bearer $ADMIN_TOKEN\" http://localhost:3001/api/rsvp/export.xlsx -o rsvp-confirmados.xlsx",
    "rsvp:list": "node -r ts-node/register scripts/rsvp-cli.ts list",
    "rsvp:confirmed": "node -r ts-node/register scripts/rsvp-cli.ts confirmed",
    "rsvp:export:csv": "node -r ts-node/register scripts/rsvp-cli.ts export:csv",
    "rsvp:export:xlsx": "node -r ts-node/register scripts/rsvp-cli.ts export:xlsx",
    "submit:sample": "node -r ts-node/register scripts/sample-submit.ts"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "zod": "^3.23.8"
  },
  "optionalDependencies": {
    "better-sqlite3": "^9.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.11.30",
    "@types/compression": "^1.7.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}
